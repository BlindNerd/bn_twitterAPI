.app--tweet
  form(id= 'tweets')
    .circle--fluid
      .circle--fluid--cell.circle--fluid--primary.align-bottom.app--tweet--post
        .app--avatar(style='background-image: url(' + myInfo.image + ')')
          img(' + profile.profile_image_url + ')
        textarea#tweet-textarea.circle--textarea--input(placeholder= 'Whats going on ' + myInfo.name + '?' name= 'tweet')
        strong#tweet-char.app--tweet--char 140
      .circle--fluid--cell.align-bottom
        button.button-primary#tweetButton Tweet
